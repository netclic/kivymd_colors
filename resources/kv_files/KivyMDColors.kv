<ColorCard>
    orientation: "vertical"

    MDLabel:
        text: root.text
        color: "grey"
        adaptive_height: True
        font_style: "Label"
        role: "small"
        bold: True

    MDCard:
        theme_bg_color: "Custom"
        md_bg_color: root.bg_color
        style: "elevated"
        elevation_level: 2

<ScreenIntro>:
    md_bg_color: self.theme_cls.backgroundColor

    MDBoxLayout:
        orientation: "vertical"
        spacing: 5
        padding: 5

        MDBoxLayout:
            orientation: "vertical"
            spacing: 5
            padding: 5
            size_hint_y: None
            height: self.minimum_height

            MDTopAppBar:
                type: "small"
                height: "48dp"
                MDTopAppBarLeadingButtonContainer:
                    MDIconButton:
                        id: button
                        icon: "menu"
                        pos_hint: {"center_y": 0.5}
                        size_hint_y: None
                        on_release: root.open_menu(self)
                MDTopAppBarTitle:
                    text: "KivyMD Palette & Colors"
                    font_style: "Title"
                    role: "small"
                MDTopAppBarTrailingButtonContainer:
                    MDActionTopAppBarButton:
                        icon: "lightbulb-on-50"
                        on_release: root.switch_theme_button()

        MDBoxLayout:
            orientation: "vertical"
            spacing: 5
            padding: 5
            height: self.minimum_height


            MDLabel:
                id: palette_name
                font_style: "Title"
                role: "medium"
                halign: "center"
                size_hint_y: None
                radius: [20,]
                md_bg_color: self.theme_cls.inversePrimaryColor
                bold: True

            MDRecycleView:
                id: card_list
                viewclass: "ColorCard"
                bar_width: 0

                RecycleGridLayout:
                    height: self.minimum_height
                    size_hint_y: None
                    cols: 2
                    spacing: 5
                    padding: 5
                    default_size: None, dp(80)
                    default_size_hint: 1, None
